<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background"
>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.496" android:contentDescription="TODO"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"

            android:drawableLeft="@drawable/user"
            android:drawableTint="#fff"
            android:background="@drawable/text_field"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Enter Your Username"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.494"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="57dp"
            android:inputType="numberPassword"

            android:drawableLeft="@drawable/password"
            android:drawableTint="#fff"
            android:background="@drawable/text_field"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Enter Your Password"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:id="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <Button

            android:text="Login Now"


            android:id="@+id/login"
            style="@style/btn"

            android:background="@drawable/button_login"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp" android:layout_width="300dp"
            android:layout_height="57dp"/>
    <Button

            android:text="Login With Facbook"

            android:id="@+id/button2"
            android:background="@drawable/button_fb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login" style="@style/btn" android:layout_width="300dp"
            android:layout_height="57dp"/>
    <TextView
            android:text="Click here for Registration"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01999998"/>
</androidx.constraintlayout.widget.ConstraintLayout>